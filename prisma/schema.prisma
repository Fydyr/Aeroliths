// Prisma schema file for PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  username       String   @unique
  name           String?
  surname        String?
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  authentication Authentication?
  role           Role            @relation(fields: [roleId], references: [id])
  roleId         String
  collections    Collections[]

  @@map("users")
}

model Authentication {
  id        String   @id @default(cuid())
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign key to User
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("authentications")
}

model Lithos {
  id         String   @id @default(cuid())
  name       String   @unique
  sprite     String
  spikeLeft  Int
  spikeRight Int
  spikeUp    Int
  spikeDown  Int
  rarity     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  collections Collections[]
  element     Elements?     @relation(fields: [elementId], references: [id])
  elementId   String?

  @@map("lithos")
}

model Role {
  id   String @id @default(cuid())
  name String @unique

  // Relations
  users User[]

  @@map("roles")
}

model Collections {
  id        String   @id @default(cuid())
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lithosId String
  lithos   Lithos @relation(fields: [lithosId], references: [id], onDelete: Cascade)

  // A user can only have one entry per Lithos
  @@unique([userId, lithosId])
  @@map("collections")
}

model Elements {
  id        String   @id @default(cuid())
  name      String   @unique
  sprite    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  lithos            Lithos[]
  weaknessesFrom    WeaknessElements[] @relation("ElementWeaknesses")
  weaknessesAgainst WeaknessElements[] @relation("WeakAgainstElement")
  strengthsFrom     StrengthElements[] @relation("ElementStrengths")
  strengthsAgainst  StrengthElements[] @relation("StrongAgainstElement")

  @@map("elements")
}

model WeaknessElements {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  elementId     String
  element       Elements @relation("ElementWeaknesses", fields: [elementId], references: [id], onDelete: Cascade)
  weakAgainstId String
  weakAgainst   Elements @relation("WeakAgainstElement", fields: [weakAgainstId], references: [id], onDelete: Cascade)

  // An element can only have one weakness entry per other element
  @@unique([elementId, weakAgainstId])
  @@map("weakness_elements")
}

model StrengthElements {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  elementId       String
  element         Elements @relation("ElementStrengths", fields: [elementId], references: [id], onDelete: Cascade)
  strongAgainstId String
  strongAgainst   Elements @relation("StrongAgainstElement", fields: [strongAgainstId], references: [id], onDelete: Cascade)

  // An element can only have one strength entry per other element
  @@unique([elementId, strongAgainstId])
  @@map("strength_elements")
}
