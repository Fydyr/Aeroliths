// Prisma schema file for PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  name      String?
  surname   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  authentication Authentication?
  role           Role             @relation(fields: [roleId], references: [id])
  roleId         String
  collections    Collections[]

  @@map("users")
}

model Authentication {
  id        String   @id @default(cuid())
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign key to User
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("authentications")
}

model Lithos {
  id         String   @id @default(cuid())
  name       String   @unique
  sprite     String
  spikeLeft  Int
  spikeRight Int
  spikeUp    Int
  spikeDown  Int
  type       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  collections Collections[]

  @@map("lithos")
}

model Role {
  id   String @id @default(cuid())
  name String @unique

  // Relations
  users User[]

  @@map("roles")
}

model Collections {
  id        String   @id @default(cuid())
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lithosId String
  lithos   Lithos @relation(fields: [lithosId], references: [id], onDelete: Cascade)

  // A user can only have one entry per Lithos
  @@unique([userId, lithosId])
  @@map("collections")
}